<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', post %></td>
      <td><%= link_to 'Destroy', post, method: :delete%></td>
    </tr>
  <% end %>
  </tbody>
</table>

